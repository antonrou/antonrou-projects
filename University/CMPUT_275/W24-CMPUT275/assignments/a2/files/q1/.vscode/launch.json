{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C Program with Args and Stdin",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out", // Make sure this points to your compiled executable
            "args": ["arg1"], // Replace arg1 and arg2 with your actual arguments
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "console": "integratedTerminal",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
